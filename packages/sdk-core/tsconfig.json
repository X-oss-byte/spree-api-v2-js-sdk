{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2016"],
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./types",
    "importsNotUsedAsValues": "preserve",
    "composite": true,
    "rootDir": "src"
  }
}
